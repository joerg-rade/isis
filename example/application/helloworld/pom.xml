                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>fail</checksumPolicy>
                    </snapshots>
                    <layout>default</layout>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>incode-cloud-maven-dev</id>
                    <name>Incode Cloud (maven-dev)</name>
                    <releases>
                        <enabled>true</enabled>
