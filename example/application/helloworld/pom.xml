                    </snapshots>
                    <layout>default</layout>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>incode-cloud-maven-prod</id>
                    <name>Incode Cloud (maven-prod)</name>
                    <releases>
                        <enabled>true</enabled>
